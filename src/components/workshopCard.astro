---
interface Props {
  image?: ImageMetadata;
  alt?: string;
  title: string;
  description: string;
  link?: string;
  day: string;
  month: string;
}

import "../styles/global.css"; // Import tailwind styles
import { Image } from 'astro:assets'; // Import image class
import defaultImage from "../Assets/Logos/Logo No Text-0.5x.png";

// Access passed-in component props, like `<X title="Hello, World" />`
const { image = defaultImage, 
    alt = "The logo of Oak and Pen. An oak tree icon that blends into a fountain pin nib.", 
    title, 
    description, 
    link = "/", 
    day, 
    month } = Astro.props;

---

<a class="w-full lg:w-[calc(0.3*100%)] rounded-2xl bg-primary-pink-50 p-6 mb-4 relative" href={link}>
    <div class="w-full flex flex-row mb-5 justify-between">
        <div class="text-secondary-purple text-4xl lg:text-5xl">{day}<br>{month}</div>
        <Image
        src={image} alt={alt}
        style={"--fit: contain;"}
        width={96}
        height={96}
        class={"rounded-4xl"}
        />
    </div>
    <h3 class="text-3xl 2xl:text-5xl font-thin">{title}</h3>
    <p class="font-light leading-tight mt-4 mb-6 text-base md:text-lg lg:text-xl">{description}</p>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" class="absolute bottom-2.5 right-2.5 size-6 stroke-secondary-purple fill-none justify-self-end">
        <path stroke-linecap="round" stroke-linejoin="round" d="m12.75 15 3-3m0 0-3-3m3 3h-7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
    </svg>
</a>